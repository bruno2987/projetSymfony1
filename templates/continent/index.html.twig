{% extends 'base.html.twig' %}

{% block title %}Hello ContinentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
    {% for continent in continents %}
        <li>{{continent.libelle}}: on retrouve dans ce continents les animaux suivants:
        <ul>
        {% for animal in continent.animaux %}
        <li>des {{animal.nom}}s de la famille des {{animal.famille}}
        {% endfor %}</li>
        </ul>
    {% endfor %}
    </ul>
</div>
{% endblock %}
